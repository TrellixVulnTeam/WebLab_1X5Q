extends layout

block content

    <form method="POST" action="/register">
    <div class="container">
        <div class="auth-form">
            <fieldset>
                <legend>Заполните форму</legend>
                <div>
                    <p>Логин:</p>
                    <input name="loginField" type="text" placeholder="Login">
                </div>
                <div>
                    <p>Пароль:</p>
                    <input name="passField" type="password" placeholder="Password">
                </div>
                <div>
                    <p>Email:</p>
                    <input name="emailField" type="email" placeholder="Email">
                </div>
                <div>
                    <button type="submit" id="sendbtn">Зарегистрировать</button>
                </div>
            </fieldset>
        </div>
    </div>
    </form>