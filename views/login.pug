extends layout

block content

    <form method="POST" action="/login">
    <div class="container">
        <div class="auth-form">
            <fieldset>
                <legend>Заполните форму</legend>
                <div>
                    <p>Логин:</p>
                    <input name="loginField" type="text" placeholder="Login">
                </div>
                <div>
                    <p>Пароль:</p>
                    <input name="passField" type="password" placeholder="Password">
                </div>
                <div>
                    <button type="submit" id="sendbtn">Войти</button>
                    <button type="submit" id="sendbtn" name="regBtn" value="true">Регистрация</button>
                </div>
            </fieldset>
        </div>
    <div>
    </form>